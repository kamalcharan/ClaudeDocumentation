            Create Space
        </button>
    </div>

    <script>
        // Wow factor: The orb reacts to the length of the name
        function updateOrb(val) {
            const orb = document.getElementById('central-orb');
            const scale = 1 + (val.length * 0.02);
            const hue = 260 + (val.length * 5); // Shift color as they type
            
            orb.style.transform = `scale(${scale})`;
            orb.style.filter = `blur(5px) hue-rotate(${val.length * 5}deg)`;
            
            if(val.length > 0) {
                orb.style.boxShadow = `0 0 80px rgba(168, 85, 247, 0.9)`;
            } else {
                orb.style.boxShadow = `0 0 50px rgba(168, 85, 247, 0.6)`;
            }
        }
    </script>
